<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Registrando novo usuário
                <div class="signup-wall">
                    <form class="form-signin" action="/admin/signup" method="POST">
                        <input type="text" name="username" class="form-control" placeholder="Usuário" required autofocus />
                        <input type="password" name="password" class="form-control" placeholder="Senha" required />
                        <input type="email" name="email" class="form-control" placeholder="Email" required />
                        <input type="text" name="firstName" class="form-control" placeholder="Nome" required />
                        <input type="text" name="lastName" class="form-control" placeholder="Sobrenome" required />
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Registrar</button>
                        <span class="clearfix"></span>
                    </form>
                </div>
                {{#if message}}
                    <div class="alert alert-danger alert-login" role="alert">{{message}}</div>
                {{/if}}
            </h1>
        </div>
    </div>
</div>
